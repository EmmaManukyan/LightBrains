<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"
        android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="#D39AF3"/>
            <gradient android:angle="0" android:startColor="#D39AF3" android:centerColor="#E3BFF7"  android:endColor="#D39AF3" android:type="linear"
                />
        </shape>
    </item>

    <item android:state_pressed="true"
        android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="16pt"/>
            <gradient android:angle="0" android:centerColor="#D39AF3"  android:endColor="#E3BFF7" android:startColor="#E3BFF7" android:type="linear"
                />
        </shape>
    </item>
</selector>