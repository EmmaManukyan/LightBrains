<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false" android:state_focused="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/color_primary_variant"/>
            <corners android:radius="18sp"/>
            <gradient android:angle="0" android:startColor="#fcd0d1" android:endColor="#F8AEAF"/>
        </shape>
    </item>

    <item
        android:state_pressed="true" android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="18sp"/>
            <gradient android:angle="0" android:startColor="#F8AEAF" android:centerColor="#fcd0d1" android:endColor="#F8AEAF"/>
        </shape>
    </item>
</selector>