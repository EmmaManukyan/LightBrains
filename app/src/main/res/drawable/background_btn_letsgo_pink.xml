<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient android:angle="0" android:endColor="#68C552BA" android:startColor="@color/pink" />
        </shape>
    </item>

    <item android:state_focused="false" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/pink"/>
            <gradient android:angle="0" android:endColor="@color/pink" android:startColor="#68C552BA" />
<!--
            <stroke android:width="1dp" android:color="@color/teal_700" />
-->
        </shape>
    </item>


</selector>