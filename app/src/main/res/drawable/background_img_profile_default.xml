<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:angle="45" android:centerColor="#FFFFFF" android:endColor="@color/grey" android:startColor="@color/grey" android:type="linear" />
            <stroke android:width="2dp" android:color="@color/purple_500" />
        </shape>
    </item>

    <item android:state_focused="false" android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="@color/white" android:endColor="#E1E1E1" android:startColor="@color/grey" />

        </shape>
    </item>
</selector>
