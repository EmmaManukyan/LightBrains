<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firstpages.PageAfterWelcome">


                <ImageView
                    android:id="@+id/my_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image2"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_btn1_start"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:text="@string/start"
                    android:textColor="@color/color_secondary_variant"
                    android:textSize="24sp"
                    android:fontFamily="@font/my_font"
                    android:padding="8dp"
                    android:textAllCaps="false"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintTop_toBottomOf="@id/my_img"
                    android:textStyle="bold"
                    />

    <Switch
        android:id="@+id/language_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btn_start"
        app:layout_constraintStart_toStartOf="@id/btn_start"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:trackTint="@color/switch_track_selector"
        android:thumbTint="@color/switch_thumb_selector"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/language_switch"
        app:layout_constraintBottom_toBottomOf="@id/language_switch"
        app:layout_constraintStart_toEndOf="@id/language_switch"
        android:text="@string/continue_in_armenian"
        android:textColor="@color/color_secondary_variant"
        android:layout_marginStart="4dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>